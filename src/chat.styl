// Main chat area and prompt box
article.focus-visible\:outline-offset-\[-4px\].focus-visible\:outline-2.text-token-text-primary.w-full:nth-of-type(1) > .xl\:px-5.lg\:px-4.md\:px-5.w-full.m-auto.md\:px-4.px-3.py-\[18px\].text-base
  margin-top 4rem
  max-width 90% !important // Wider screen usage

.w-full.md\:dark\:border-transparent.md\:border-transparent.dark\:border-white\/20.md\:pt-0 .xl\:px-5.lg\:px-1.md\:px-5.w-full.m-auto.md\:px-4.px-3.text-base
  background var(--main-surface-primary)
  position relative !important
  z-index 999 !important
  max-width 90% !important // Wider screen usage

  &::before
    content ''
    background linear-gradient(transparent, var(--main-surface-primary) 75%)
    width 100%
    height 2rem
    position absolute
    left 0
    top -2rem

// Prompt box
textarea#prompt-textarea
  margin 0 0.5rem

  &::placeholder
    color var(--text-tertiary) !important
    opacity 1 // Firefox

  &::-ms-input-placeholder
    color var(--text-tertiary) !important

div.w-full > .w-full:has(.flex-col.flex-1.max-w-full.h-full.flex.relative)
  position unset

  .flex-col.flex-1.max-w-full.h-full.flex.relative
    width 90% // Increased from 48rem
    max-width 120rem
    z-index 100
    position fixed !important
    bottom 2rem
    height auto
    left 50%
    transform translateX(-50%)

#composer-background
  max-width 95% // Increased from 100rem to be more responsive/wide
  flex-direction row

  .items-start // prompt area
    flex 1
    text-align left
    align-items center

// Layout adjustments
main > div
  > div.flex-1.overflow-hidden
    overflow visible

  > div.w-full
    position sticky
    bottom 0

    > div.px-3
      padding-top 1.5rem
      background linear-gradient(transparent, var(--main-surface-primary) 30%)

    > div.px-2
      background var(--main-surface-primary)

// Greeting/Splash
.leading-9.font-semibold.text-2xl.justify-center.inline-flex
  flex-direction column
  max-width unset
  min-width 100%

  &::before
    text-align center
    content splash
    font-size 3rem
    font-weight bold
    color clr-acc2
    margin-bottom 5rem
    margin-top 0
